generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Platform {
  YouTube
}

model Account {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  platform      Platform
  platform_id   String
  access_token  String
  refresh_token String

  @@unique([platform, platform_id])
}
